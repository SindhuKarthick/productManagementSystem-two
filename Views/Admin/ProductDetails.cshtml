@model IEnumerable<productManagementSystem.Models.Product>

@{ ViewBag.Title = "Product Details"; }

<h2>Product Details</h2>

@if (ViewBag.Error != null)
{
<div class="alert alert-danger">
    @ViewBag.Error
</div>}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
<tr>
    <td>@product.Name</td>
    <td>@product.Description</td>
    <td>@product.Price</td>
    <td>@product.StockCount</td>
    <td>
        <!-- Edit Button -->
        @Html.ActionLink("Edit", "UpdateProduct", new { id = product.ProductId }, new { @class = "btn btn-primary btn-sm" })

        <!-- Delete Button -->
        @Html.ActionLink("Delete", "DeleteProduct", new { id = product.ProductId }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Are you sure you want to delete this product?');" })
    </td>
</tr>
}
    </tbody>
</table>