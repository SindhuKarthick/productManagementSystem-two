@model productManagementSystem.Models.User
@{ ViewBag.Title = "Admin Login"; }

<h2>Admin Login</h2>

@if (ViewBag.Error != null)
{
<div class="alert alert-danger">
    @ViewBag.Error
</div>}

@using (Html.BeginForm())
{
<div class="form-group">
    @Html.LabelFor(m => m.Username, "Username")
    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Enter your username" })
</div>

                <div class="form-group">
                    @Html.Label("Password", "Password")
                    <input type="password" name="password" class="form-control" placeholder="Enter your password" />
                </div>

                                <button type="submit" class="btn btn-primary">Login</button>
}

<p>
    New Admin? <a href="@Url.Action("SignIn", "Admin")">Sign In</a>
</p>

<p>
    <a href="@Url.Action("ForgetPassword", "Admin")">Forgot Password?</a>
</p>